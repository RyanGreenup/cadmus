/* QSplitter */
QSplitter#MainSplitter {
    border: none;
    margin-left: $3px;
}

QSplitter {
    border: none;
}

QSplitter::handle {
    background-color: @splitter_handle_bg;
}

QSplitter::handle:pressed {
    background-color: @splitter_handle_pressed_bg;
}

QSplitter::handle:vertical {
    height: $2px;
}

QSplitter::handle:horizontal {
    width: $2px;
}
