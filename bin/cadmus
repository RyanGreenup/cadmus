    echo
    echo -e " \e[1;91m    \e[1m Command \e[0m\e[0m \e[1;34mâ”Šâ”Šâ”Š \e[0m Description "
    echo -e " ..............\e[1;34mâ”Šâ”Šâ”Š\e[0m........................................... "
    echo -e " \e[1;32m ranger \e[0m \e[1;34m     â”Šâ”Šâ”Š \e[0m Open Notes Directory in Ranger"
    echo -e " \e[1;32m wa \e[0m \e[1;34m     â”Šâ”Šâ”Š \e[0m Activate Window FIX: use command not alias?"
    echo -e " \e[1;32m wR \e[0m \e[1;34m     â”Šâ”Šâ”Š \e[0m Relocate Window (Like rofi)"
    echo
    echo -e "    \e[3m\e[1mâ€¢ Notes\e[0m "
    echo -e "       "
    echo
    }


# *** All the Help
## I think all the help files should just be md files, then I could simply do `mdcat *`
subHelp () {
    echo
    echo
    echo -e "\e[1;35m -------------------------\e[0m "
    echo -e "  \e[1;94m\e[3m\e[1m Cadmus Find \e[0m"
    echo -e "\e[1;35m -------------------------\e[0m "
    NoteFind.sh -h

    echo
    echo
    echo -e "\e[1;35m -------------------------\e[0m "
    echo -e "  \e[1;94m\e[3m\e[1m Cadmus Search\e[0m"
    echo -e "\e[1;35m -------------------------\e[0m "
    NoteRecollSearch.sh -h

    echo
    echo
    echo -e "\e[1;35m -------------------------\e[0m "
    echo -e "  \e[1;94m\e[3m\e[1m Cadmus Tools\e[0m"
    echo -e "\e[1;35m -------------------------\e[0m "
    ToolsHelp # This is the exception because these things don't have a help cause they're so simple


    echo
    echo
    echo -e "\e[1;35m -------------------------\e[0m "
    echo -e "  \e[1;94m\e[3m\e[1m Cadmus Export \e[0m"
    echo -e "\e[1;35m -------------------------\e[0m "
    ExportHelp

    echo
    echo
    echo -e "\e[1;35m -------------------------\e[0m "
    echo -e "  \e[1;94m\e[3m\e[1m Cadmus Convert \e[0m"
    echo -e "\e[1;35m -------------------------\e[0m "
    ConvertHelp

    echo
    echo
    echo -e "\e[1;35m -------------------------\e[0m "
    echo -e "  \e[1;94m\e[3m\e[1m Cadmus Misc \e[0m"
    echo -e "\e[1;35m -------------------------\e[0m "
    MiscHelp
}

# * Call the Main Function
main "${@}"
