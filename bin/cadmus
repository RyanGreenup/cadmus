# *** Misc
CadmusMisc() {
    [[ -z "${1:-}" ]] && MiscHelp && exit 0

    while test $# -gt 0
    do
        case "$1" in
            ranger) shift; ranger "${NOTES_DIR}" && exit 0
                ;;
            wa) shift; wmctrl -a "$(wmctrl -l | cut -f 5- -d " " | fzf)" && exit 0
                ;;
            wR) shift; wmctrl -R "$(wmctrl -l | cut -f 5- -d " " | fzf)" && exit 0
                ;;
            --*) >&2 echo "bad option $1"
                ;;
            *) >&2 echo -e "argument \e[1;35m${1}\e[0m has no definition."
                ;;
        esac
        shift
    done

}

